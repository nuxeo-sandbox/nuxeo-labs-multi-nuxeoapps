<?xml version="1.0"?>
<!-- For the unit test, we use environement variables
     They are resoved in NuxeoAppDescriptor#expandEnvironmentVariables -->
<component
	name="org.nuxeo.labs.multi.nuxeoapps.test.MultiNuxeoApps">

	<extension
		target="org.nuxeo.labs.multi.nuxeoapps.service.MultiNuxeoAppService"
		point="nuxeoapp">
		<nuxeoapp>
			<appName>TEST_AppBASIC1</appName>
			<appUrl>${TEST_MULTIAPPS_APP_BASIC1_URL}</appUrl>
			<basicUser>${TEST_MULTIAPPS_APP_BASIC1_USERNAME}</basicUser>
			<basicPwd>${TEST_MULTIAPPS_APP_BASIC1_PASSWORD}</basicPwd>
		</nuxeoapp>
		<nuxeoapp>
			<appName>TEST_AppBASIC2</appName>
			<appUrl>${TEST_MULTIAPPS_APP_BASIC2_URL}</appUrl>
			<basicUser>${TEST_MULTIAPPS_APP_BASIC2_USERNAME}</basicUser>
			<basicPwd>${TEST_MULTIAPPS_APP_BASIC2_PASSWORD}</basicPwd>
		</nuxeoapp>
		<nuxeoapp>
			<appName>TEST_AppJWT</appName>
			<appUrl>${TEST_MULTIAPPS_APP_JWT_URL}</appUrl>
			<tokenUser>${TEST_MULTIAPPS_APP_JWT_TOKEN_USER}</tokenUser>
			<tokenClientId>${TEST_MULTIAPPS_APP_JWT_CLIENT_ID}</tokenClientId>
			<tokenClientSecret>${TEST_MULTIAPPS_APP_JWT_CLIENT_SECRET}</tokenClientSecret>
			<jwtSecret>${TEST_MULTIAPPS_APP_TOKEN_JWT_SECRET}</jwtSecret>
		</nuxeoapp>
	</extension>

</component>
